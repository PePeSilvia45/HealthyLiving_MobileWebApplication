@model HealthyLiving.Models.Message
@{
    ViewBag.Title = "Contact";
}
<div id="contact" class="container-fluid bg-grey" style="padding:20px;">
    <div class="contact-container">

        <div class="contact-information">
            <p>
                We are always here to help you kick start your new healthy lifestyle. Dont hesitate To
                get in contact if you have any issues with our application or request further information.
                Leave your name and details as well as a reason for your message and someone will get back
                in touch with you as soon as possible
            </p>
        </div>

        <div class="contact-details">
            <h4><img src="~/Images/Icons/Location.png" alt="icon of a location pin" />190 Cathedral St, Glasgow G4 0RF</h4>
            <h4><img src="~/Images/Icons/phone.png" alt="icon of a phone" />+44 7123456789</h4>
            <h4>
                <a href="mailto:30050983@cityofglacol.ac.uk">
                    <img src="~/Images/Icons/email.png" alt="icon of a letter" style="padding-right:2px;" />support@healthyliving.com
                </a>
            </h4>

        </div>

        <div class="contact-heading">
            <h2><u>Contact Us</u></h2>
        </div>

        <div class="contact-form">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="row">
                        <div class="col-sm-6 form-group">
                            @Html.TextBoxFor(model => model.FullName, new { @placeholder = "Name", @class = "form-control", @id = "name" })
                            @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-sm-6 form-group">
                            @Html.TextBoxFor(model => model.Reason, new { @placeholder = "Reason", @class = "form-control", @id = "name" })
                            @Html.ValidationMessageFor(model => model.Reason, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-6 form-group">
                            @Html.TextBoxFor(model => model.Email, new { @placeholder = "Email", @class = "form-control", @id = "email" })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-sm-6 form-group">
                            @Html.TextAreaFor(model => model.Comment, new { @placeholder = "Comment", @class = "form-control", @id = "email" })
                            @Html.ValidationMessageFor(model => model.Comment, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-12 form-group submit-btn">
                            <input type="submit" value="Send" class="btn btn-default pull-right " />
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="contact-map">
            <a href="https://www.google.com/maps/place/City+of+Glasgow+College/55.8630079,-4.2460023,17.4z/data=!4m5!3m4!1s0x4888441e1797b92f:0xec2975632e67711c!8m2!3d55.8631845!4d-4.244724">
                <img src="~/Images/map/map.jpg" alt="picture of a map of city of glasgow college" class="map-img img-responsive" style="width: 500px; height: auto;" />
            </a>
        </div>

    </div>
</div>