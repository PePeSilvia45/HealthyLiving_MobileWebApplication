
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Healthy Living</title>


    <link rel="stylesheet" href="styles/about.css">
    <link href="~/Styles/Style.css" rel="stylesheet" />
    <link href="../Content/bootstrap.css" rel="stylesheet" />
    <script type="text/javascript" src="../Scripts/bootstrap.js"></script>
    <script type="text/javascript" src="../Scripts/jquery-1.9.1.js"></script>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body style="background-color:#999">
    <div>
        <div class="splashscreen-container">

            <div class="splashscreen-heading">
                <h3>Welcome To Healthy Living</h3>
            </div>
            <div class="row splashscreen-login">
                <input type="button" value="Login" onclick="location.href='@Url.Action("Login", "Account" )'" style="width:150px;" />
            </div>
            <div class="splashscreen-register">
                <input type="button" value="Register" onclick="location.href='@Url.Action("Register", "Account" )'" style="width:150px;"/>
            </div>
            <div class="row splashscreen-guest">
                <input type="button" value="Continue As Guest" onclick="location.href='@Url.Action("Index", "Home" )'" style="width:150px;"/>
            </div>

        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
    </div>
</body>
</html>
