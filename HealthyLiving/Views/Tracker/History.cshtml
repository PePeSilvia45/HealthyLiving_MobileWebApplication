
@{
    ViewBag.Title = "History";
}

<div class="history-container" style="margin-top: 5%;">
    <div class="history-heading">
        <h2>History</h2>
    </div>
    <div class="history-entries">
        <table id="dataTable" class="table table-responsive">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Calorie Intake</th>
                    <th>Water Intake</th>
                    <th>Steps Taken</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in ViewBag.Intakes)
                {
                    <tr>
                        <td>
                            @Convert.ToDateTime(item.IntakeDate).ToString("dd/MM/yyyy")
                        </td>
                        <td>
                            <p>@item.TotalDailyCalorieIntake cal</p>
                        </td>
                        <td>
                            <p>@item.TotalDailyWaterIntake ml</p>
                        </td>
                        <td>
                            <p>@item.TotalStepsTaken Steps</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>